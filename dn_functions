#include "monty.h"
/**
 * dn_find_arg0 - program thatt Find the position of argument 1 in given string
 * @buf: buffer for first argument
 * Return: first argument ptr
 */
char *dn_find_arg0(char *buf)
{
	while (*buf == ' ')
	{
		if (*buf == '\0')
			return (NULL);
		buf++;
	}
	return (buf);
}
/**
 * dn_find_arg1 - program that find the position of argument 2 in given string
 * @buf: buffer for second argument
 * Return: second argument ptr
 */
char *dn_find_arg1(char *buf)
{
	while (*buf == ' ')
	{
		if (*buf == '\0')
			return (NULL);
		buf++;
	}
	while (*buf != ' ')
	{
		if (buf == '\0')
			return (NULL);
		buf++;
	}
	while (*buf == ' ')
	{
		if (*buf == '\0')
			return (NULL);
		buf++;
	}
	return (buf);
}
/**
 * dn_word_match - program that matches two words space and \0 are end of word conditions.
 * @s1: str1
 * @s2: str2
 * Return: 1 on match, 0 on no match
 */
int dn_word_match(char *s1, char *s2)
{
	int elm;

	if (s1 == NULL || s2 == NULL)
		return (0);

	for (elm = 0; s1[elm] == s2[elm]; elm++)
	{
		if (s1[elm] == '\0' || s1[elm] == ' ')
			return (1);
	}
	if (s1[elm] == ' ' || s1[elm] == '\0' || s1[elm] == '\n')
		if (s2[elm] == ' ' || s2[elm] == '\0' || s2[elm] == '\n')
			return (1);
	if (s2[elm] == ' ' || s2[elm] == '\0' || s2[elm] == '\n')
		if (s1[elm] == ' ' || s1[elm] == '\0' || s2[elm] == '\n')
			return (1);

	return (0);
}
/**
 * dn_parse_number - program that return the number from the string
 * Return: Number found
 */
int dn_parse_number(void)
{
	char *arg_ptr;

	arg_ptr = find_arg2(global.buf);
	if ((*arg_ptr < '0' || *arg_ptr > '9') && *arg_ptr != '-')
	{
		global.mode = 2;
		return (0);
	}
	return (atoi(arg_ptr));
}
